<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_slate_gray"
    android:layout_height="match_parent"
    tools:context=".Fragment.FavFragment">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgNedd"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_baseline_hourglass_empty_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/txtNeed"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/aqua"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:text="You need to Login to use this feature"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
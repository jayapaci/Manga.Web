<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_slate_gray"
    tools:context=".Fragment.BlankFragment4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:text="Hello,"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text_name"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:paddingLeft="140dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@color/dark_cyan"
            android:textColor="@color/azure"
            android:text="Data &amp; Cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/clear_history"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="Clear History Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/aquamarine"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>


        <TextView
            android:id="@+id/clear_bookmark"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="Clear Bookmark Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/aquamarine"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <TextView
            android:id="@+id/clear_cache"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="Clear Cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@color/dark_cyan"
            android:textColor="@color/azure"
            android:text="Sosial Media"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/facebook"
            android:paddingLeft="12dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_color="@color/aqua"
                app:civ_border_width="1dp"
                android:src="@drawable/ic_facebook"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/instagram"
            android:paddingLeft="12dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp"
                android:src="@drawable/instagram"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/version_app"
            android:textSize="18dp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@color/dark_cyan"
            android:textColor="@color/azure"
            android:text="Version"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/privacy_policy"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="Privacy Policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/rate_app"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="Rate Application"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/other_app"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="Other Application"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="20dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="@color/crimson"
                android:text="Sign Out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/baseline_logout_24"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>